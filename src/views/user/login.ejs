<%- include('../header', {title: 'Login Page'}) %>
<header>
  <%- include('../navbar', {title}) %>
</header>
<div class="container-fluid justify-content-center w-100" style="margin-top: 40px; justify-content: center; padding: 0 10%;">
  <h2 class="text-center pt-5">Login</h2>
  <div class="conatiner d-flex flex-row p-0 px-lg-5 rounded">
      <div class="container d-none d-md-flex p-0 shadow">
        <img class="w-full rounded-start" src="<%= image %>" alt="Login Image" srcset="<%= image %>" style="object-fit: cover; width: 100%;">
        <div class="position-absolute p-5 text-white mt-5" style="width: 30%;">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512" class="w-50 left-50 mb-3" style="margin-left: 25%; fill: #ffffff"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M406.5 399.6C387.4 352.9 341.5 320 288 320l-64 0c-53.5 0-99.4 32.9-118.5 79.6C69.9 362.2 48 311.7 48 256C48 141.1 141.1 48 256 48s208 93.1 208 208c0 55.7-21.9 106.2-57.5 143.6zm-40.1 32.7C334.4 452.4 296.6 464 256 464s-78.4-11.6-110.5-31.7c7.3-36.7 39.7-64.3 78.5-64.3l64 0c38.8 0 71.2 27.6 78.5 64.3zM256 512A256 256 0 1 0 256 0a256 256 0 1 0 0 512zm0-272a40 40 0 1 1 0-80 40 40 0 1 1 0 80zm-88-40a88 88 0 1 0 176 0 88 88 0 1 0 -176 0z"/></svg>
          <h1 class="mb-3 text-center">Hello</h1>
          <h5 class="mb-3 text-center">Welcome Back</h5>
        </div>
      </div>
      <form id="login-form" class="row justify-content-center w-100 align-middle m-0 shadow rounded" style="padding: 10% 10%; justify-content: center; margin-right: 0; background-color: #dddddd;" method="post">
        <p style="font-size: 10px; font-weight: 700; color: #ff0000;">* Required</p>
        <p id="error" class="rounded text-center text-danger mb-2 p-2"></p>
        <div class="mb-3">
          <label for="email" class="form-label">Email address *</label>
          <input type="email" class="form-control" id="email" name="email" autocomplete="off" required>
        </div>
        <div class="mb-4">
          <label for="password" class="form-label">Password *</label>
          <div class="input-group">
              <input type="password" class="form-control" id="password" name="password" required>
              <span class="input-group-text" id="addon" onclick="showPassword('password', 'addon')" style="cursor: pointer;">
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512" width="16px"><!--!Font Awesome Free 6.6.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc.--><path d="M288 80c-65.2 0-118.8 29.6-159.9 67.7C89.6 183.5 63 226 49.4 256c13.6 30 40.2 72.5 78.6 108.3C169.2 402.4 222.8 432 288 432s118.8-29.6 159.9-67.7C486.4 328.5 513 286 526.6 256c-13.6-30-40.2-72.5-78.6-108.3C406.8 109.6 353.2 80 288 80zM95.4 112.6C142.5 68.8 207.2 32 288 32s145.5 36.8 192.6 80.6c46.8 43.5 78.1 95.4 93 131.1c3.3 7.9 3.3 16.7 0 24.6c-14.9 35.7-46.2 87.7-93 131.1C433.5 443.2 368.8 480 288 480s-145.5-36.8-192.6-80.6C48.6 356 17.3 304 2.5 268.3c-3.3-7.9-3.3-16.7 0-24.6C17.3 208 48.6 156 95.4 112.6zM288 336c44.2 0 80-35.8 80-80s-35.8-80-80-80c-.7 0-1.3 0-2 0c1.3 5.1 2 10.5 2 16c0 35.3-28.7 64-64 64c-5.5 0-10.9-.7-16-2c0 .7 0 1.3 0 2c0 44.2 35.8 80 80 80zm0-208a128 128 0 1 1 0 256 128 128 0 1 1 0-256z"/></svg>
              </span>
          </div>
      </div>
        <div class="mb-4 ps-5 ps-md-3 text-center">
          <a href="/signup" class="text-decoration-none font-weight-bolder" style="font-size: 14px;">Don't have an account? Signup now</a>
        </div>
        <button type="submit" class="btn btn-primary w-75" onsubmit="(e) => validateForm(e)">Submit</button>
      </form>
  </div>
</div>

<%- include('../footer') %>